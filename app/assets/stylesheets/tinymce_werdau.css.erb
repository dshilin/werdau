body, td, pre {
  color:#575757;
  font-family: segoe ui, arial, tahoma, sans-serif;
  font-size:13px;
  line-height: 1.3;
}

body.mceForceColors {
  background: transparent;
  color: #575757;
}

body.mceBrowserDefaults {
  background:transparent;
  color:inherit;
  font-size:inherit;
  font-family:inherit;
}

h1 {
  color: #B9BDC8;
  text-transform: uppercase;
  font-size: 35px;
  font-weight: normal;
  margin-bottom: 40px;
}

h2 {
  color: #D82022;
  font-size: 21px;
  font-weight: normal;
  margin: 20px 0 12px 0;
}

ul {
  list-style-type: none;
  margin: 20px 0;
  padding: 0 20px;
}

ul li {
  padding-left: 15px;
  background: url(<%= image_path 'dort.gif' %>) no-repeat left;
}

.note {
  background: #DBECF1;
  margin-bottom: 30px;
  padding: 9px;
}

.note-2 {
  color: #838C95;
  background: #F8F8F8;
  margin: 20px 0;
  padding: 10px 30px;
  line-height: 1.5;
}

.note-2 h2 {
  color: #2E7FA7;
  margin: 10px 0;
}

.note-2 p {
  margin: 0 0 10px 0;
}

