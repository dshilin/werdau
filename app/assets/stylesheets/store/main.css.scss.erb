@charset "utf-8";

html, body {
  height:100%;
}

body {
  font-family: segoe ui, arial, tahoma, sans-serif;
  font-size: 13px;
  line-height: 1.3;
  color: #575757;
  background: url(<%= image_path 'store/bg.png' %>) top repeat-x;
} 

a {color:#6e7777;}
a:hover {text-decoration:none;}

nav ul {
  margin: 0;
  padding: 0;
}

.container {
  width: 1200px;
  position:relative;
  min-width:1150px;
  background: url(<%= image_path 'store/bg2.png' %>) no-repeat right bottom;
}

.top-nav ul {
  background: url(<%= image_path 'store/line.png' %>) no-repeat 10px;
  padding-left: 14px;

  margin: 16px 0 16px 227px;
}

.top-nav li {
  display: inline-block;
  margin: 0 11px;
  font-size: 11px;
}

.top-nav li a {
  color: #565656;
  font-weight: bold;
  text-transform: uppercase;
  text-decoration: none;
}

.top-nav li a:hover {
  text-decoration: underline;
}

.login {
  float: right;
  margin-top: -36px;
  width: 55px;
  height: 24px;

  font-size: 11px;
  line-height: 11px;
  background: url(<%= image_path 'store/key.png' %>) no-repeat left 2px;
  padding-left: 17px;
}


header {
  background: url(<%= image_path 'store/headbg.png' %>) top repeat-x;
  height: 155px;
  position: relative;
  overflow: hidden;
  color: #fff;
  font-size: 12px;
  clear: both;
  margin-bottom: 0;
}


header .logo {
  position: absolute;
  left: 36px;
  top: 28px;

  text-align: center;
}

header .logo img {
  display: block;
}

header .logo a {
  color: #fff;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 10px;
  letter-spacing: 0.3em;
}


header .search {
  position: absolute;
  top: 28px;
  left: 235px;
}

header .search input[type=search] {
  -webkit-border-radius: 4px;  
  -moz-border-radius: 4px;  
  border-radius: 4px;  

  border: 1px solid #000;
  width: 620px;
  height: 28px;
  background: #fff;

  color: #4a6d83;
  font-size: 17px;
  padding-left: 5px;
}

header .search input[type=submit] {
  width: 56px;
  height: 31px;
  line-height: 31px;
  margin-left: 2px;

  color: #fff;
  font-size: 11px;

  text-transform: uppercase;
  text-decoration: none;
  text-align: center;

  background: url(<%= image_path 'store/search.png' %>) no-repeat;
  border: 0;
}


header .contacts {
  position: absolute;
  bottom: 0px;
  left: 205px;
  height: 78px;
  background: url(<%= image_path 'store/phone.png' %>) no-repeat bottom left;
  padding-left: 30px;
}

header .contacts .phone {
  font-size: 30px;
}

header .contacts .phone span {
  font-size: 20px;
}

header .contacts .callback {
  font-size: 13px;
  color: #fff;
  margin-left: 40px;
  text-transform: uppercase;
}


header .notice {
  position: absolute;
  left: 607px;
  background: url(<%= image_path 'store/notice.png' %>) no-repeat;
  width: 214px;
  height: 58px;
  top: 67px;
  font-size: 18px;
  padding: 15px 0 0 35px;
}

header .notice span {
  display: block;
}

header .notice span.ship {
  font-size: 14px;
}


header .cart {
  position: absolute;
  left: 971px;
  top: 25px;  
}

header .cart h2 {
  font-weight: normal;
  font-size: 29px;  
  margin-bottom: 6px;
}

header .cart .cont {
  background: url(<%= image_path 'store/dash.png' %>) repeat-y left;  
  min-height: 69px;
  padding-left: 15px;
}

header .cart .icon {
  position: absolute;
  width: 85px;
  height: 60px;
  background: url(<%= image_path 'store/cart.png' %>) no-repeat bottom left;
  left: 110px;
  top: -5px;
}

header .cart .icon.act{
  background: url(<%= image_path 'store/cart2.png' %>) no-repeat bottom left;
}


.photoline {
  height: 84px;
  background: url(<%= image_path 'store/tbar.jpg' %>) repeat-x;
}


#product-categories {
  width: 1250px;
  height: 132px;
  display: block;
  position: relative;
}

#product-categories li {
  display: block;
  float: left;
  font-size: 10px;
  text-transform: uppercase;
  text-decoration: none;
  color: #505a59;
  padding-top: 15px;
  padding-bottom: 15px;
  margin: 0 12px 0 60px;
  min-height: 120px;
}

#product-categories li.selected {
  border-left: 2px solid black;
  border-right: 2px solid black;
  border-top: 2px solid black;
  padding-top: 13px;
  margin-left: 58px;
  margin-right: 10px;
  z-index: 2;
}

#product-categories a:hover {
  color: #d82123;
  text-decoration: underline;
}

#product-categories a img {
  display: block;
  margin-left: 16px;
}

#product-categories a span {
  display: block;
  width: 96px;
  text-align: center;
}

#product-categories .selected .level2 {
  display: block;
}

#product-categories .level2 {
  display: none;
  width: 1100px;
  position: absolute;
  padding: 10px 10px;
  left: 30px;
  top: 120px;
  z-index: 1;
  background: #fff;
  border: 2px solid black;
}

#product-categories .level2 li {
  width: 200px;
  margin: 0;
  padding-left: 70px;
  float: left;
  position: relative;
  min-height: 55px;
}

#product-categories .level2 img {
  position: absolute;
  margin-left: -70px;
}

#product-categories .level2 li a {
  font-size: 14px;
  color: blue;
}

#product-categories .level3 li {
  min-height: 0;
  padding: 0;
}

#product-categories .level3 li a {
  color: black;
  font-size: 10px;
}


.mainact {
  padding: 30px 40px;
  width: 880px;
  position: relative;
  text-align: center;
}

.additionalnav {
  position: absolute;
  right: -209px;
  width: 200px;
  top: 0;
  text-align: left;
  padding: 30px 0 0 0;
  height: 220px;
}

.popup .personal-data input:focus {  
    -webkit-box-shadow: 0px 0px 5px #007eff;  
    -moz-box-shadow: 0px 0px 5px #007eff;  
    box-shadow: 0px 0px 5px #007eff;  
} 

.index .col-1, .index .col-2 {
  float: left;
}

.index .col-1 {
  padding: 10px 0 0 40px;
  width: 575px;
  overflow: hidden;
}

.index .col-2 {
  background: #fcfcfc;
  border: 1px dashed #dddce1;
  padding: 22px 22px 0px 22px;
  border-bottom-width: 0px;
  width: 259px;
  position: relative;
  overflow: show;
}

.index .col-2 .news {
  min-height: 560px;
}

.index .col-2 .about {
  border-right: 1px solid #edeef2;
  width: 904px;
  margin-left: -637px;
  margin-top: 20px;
  position: relative;
  z-index: 100;
}

.index .col-3 {
  margin-left: 960px;
  width: 270px;
  padding-top: 20px;
}

#footer {
  height: 53px;
  background: #38505c;
  padding: 25px 25px 60px 25px;
  color: #fff;
  position: relative;
}

#footer .bmenu {
  position: relative;
  float: right;
  top: -15px;
  color: #d2d2dc;
}

#footer .bmenu a {
  color: #fff;
}

#footer .copy {
  background: url(<%= image_path 'store/logo2.png' %>) no-repeat left;
  padding-left: 71px;
}

.bpanel {
  bottom: 0;
  position: fixed;
  background: url(<%= image_path 'store/bpanel.png' %>) repeat-x top;
  padding-top: 18px;
  height: 30px;
  z-index: 1000;
  width: 100%;
}

#content {
  margin: 0 0 0 40px;
}

aside#sidebar {
  float: right;
  width: 300px;
  margin-left: 50px;

  .title {
    border-bottom: 2px solid red;
    margin-bottom: 1em;
    text-align: right;
    font-size: 13px;
    text-transform: uppercase;

    span {
      display: inline-block;
      height: 26px;
      line-height: 26px;
    }

    & > span {
      padding-right: 15px;
      background: url(<%= image_path('store/tab-right.png') %>) top right no-repeat;

      & > span {
        padding-left: 15px;
        background: url(<%= image_path 'store/tab-left.png' %>) top left no-repeat;
      }
    }
  }
}

