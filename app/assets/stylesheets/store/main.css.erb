@import url(<%= asset_path 'stylesheets/store/content.css' %>);  
@charset "windows-1251";

/*reset*/

html, body, div, span, object, h1, h2, h3, h4, h5, h6, a, em, ins, small, strong, b, i, dl, dt, dd, form, label, table, tbody, tfoot, thead, tr, th, td, p, ul, li {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  font-size: 100%;
  vertical-align: baseline;
  background: transparent;
}
img {
  border: 0;
  outline: 0;
  font-size: 100%;
  background: transparent;
}
body {
  line-height: 1.3;
  background: url(<%= image_path 'store/bg.png' %>) top repeat-x;
}

ul {
  list-style: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

html, body {
height:100%;
font-size: 13px;
}

body {font-family: segoe ui, arial, tahoma, sans-serif; font-size:100.01%;color: #575757;} 
a {color:#d91f24;}
a:hover {text-decoration:none;}
p {
  margin: 0 0 10px 0;
}
.container {
  width:100%;
  position:relative;
  min-width:1000px;
  background: url(<%= image_path 'store/bg2.png' %>) no-repeat right bottom;
}

#header { background: url(<%= image_path 'store/headbg.png' %>) top repeat-x; height: 155px; position:relative; overflow:hidden; color: #fff; font-size: 12px; clear: both; margin-bottom: 0;}
#header h2 { color: #fff; }

.top-nav {background: url(<%= image_path 'store/line.png' %>) no-repeat 10px; height: 27px; margin: 0 0 0 227px; padding: 16px 0 0 14px;}
.top-nav li {float: left; font-weight: bold;}
.top-nav li a {color: #000; display: block; text-decoration: none; text-transform: uppercase; color: #565656;  font-size: 11px; padding: 0 11px;}
.top-nav li a:hover, .top-nav li span { text-decoration: underline;}

.tbar {
  float: right;
  margin-top: -30px;
}

.tbar .enter {
  font-size: 11px;
  background: url(<%= image_path 'store/key.png' %>) no-repeat left 2px;
  display: inline-block;
  width: 55px;
  padding-left: 17px;
  line-height: 11px;
  height: 24px;
  margin-left: 10px;
}


#header .logo {position:absolute; left:36px; top:20px; color: #fff; text-align: center; text-transform: uppercase;}
#header .logo img {display: block; margin-top: 9px;}
#header .logo a {text-decoration: none; color: #fff; font-size: 10px; letter-spacing: 0.3em;}

#header .search {
  position: absolute;
  background: #fff;
    -webkit-border-radius: 4px;  
    -moz-border-radius: 4px;  
    border-radius: 4px;  
  border: 1px solid #000;
  width: 620px;
  height: 28px;
  top: 28px;
  left: 235px;
}

#header .search input {
  border-width: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  color: #4a6d83;
  font-size: 17px;
  padding-left: 5px;
}

#header .search a {
  color: #fff;
  text-transform: uppercase;
  font-size: 11px;
  display: block;
  width: 56px;
  height: 31px;
  position: absolute;
  right: -65px;
  top: -1px;
  line-height: 31px;
  text-decoration: none;
  text-align: center;
  background: url(<%= image_path 'store/search.png' %>) no-repeat;
}
#header .contacts { position: absolute; bottom: 0px; left: 205px; height: 78px; background: url(<%= image_path 'store/phone.png' %>) no-repeat bottom left; padding-left: 30px;}
#header .contacts .phone { font-size: 30px;}
#header .contacts .phone span {  font-size: 20px;}
#header .contacts .callback {font-size: 13px; color: #fff; margin-left: 40px; text-transform: uppercase;}

#header .notice {
  position: absolute;
  left: 607px;
  background: url(<%= image_path 'store/notice.png' %>) no-repeat;
  width: 214px;
  height: 58px;
  top: 67px;
  font-size: 18px;
  padding: 15px 0 0 35px;
}

#header .notice span {
  display: block;
}

#header .notice span.ship {
  font-size: 14px;
}

#header .cart {
  position: absolute;
  left: 971px;
  top: 25px;  
}

#header .cart h2 {
  font-weight: normal;
  font-size: 29px;  
  margin-bottom: 6px;
}

#header .cart .cont {
  background: url(<%= image_path 'store/dash.png' %>) repeat-y left;  
  min-height: 69px;
  padding-left: 15px;
}

#header .cart .icon {
  position: absolute;
  width: 85px;
  height: 60px;
  background: url(<%= image_path 'store/cart.png' %>) no-repeat bottom left;
  left: 110px;
  top: -5px;
}

#header .cart .icon.act{
  background: url(<%= image_path 'store/cart2.png' %>) no-repeat bottom left;
}

.photoline {
  height: 84px;
  background: url(<%= image_path 'store/tbar.jpg' %>) repeat-x;
}


.mainmenu {
  width: 1250px;
  height: 132px;
  display: block;
  position: relative;
}

.mainmenu li {
  display: block;
  float: left;
  font-size: 10px;
  text-transform: uppercase;
  text-decoration: none;
  color: #505a59;
  padding-top: 15px;
  padding-bottom: 15px;
  margin: 0 12px 0 60px;
}

.mainmenu li.selected {
  border-left: 2px solid black;
  border-right: 2px solid black;
  border-top: 2px solid black;
  z-index: 2;
}

.mainmenu a {
  position: relative;
}

.mainmenu a:hover {
  color: #d82123;
  text-decoration: underline;
}

.mainmenu a span {
  position: absolute;
  bottom: 0px;
  width: 96px;
  left: 20px;
}

.mainmenu .selected .submenu {
  display: block;
}

.mainmenu .submenu {
  display: none;
  width: 1240px;
  position: absolute;
  padding: 10px 10px;
  left: 30px;
  top: 120px;
  z-index: 1;
  background: #fff;
  border: 2px solid black;
}

.mainmenu .submenu li {
  width: 230px;
  margin: 0;
  padding-left: 70px;
  float: left;
  position: relative;
  min-height: 55px;
}

.mainmenu .submenu img {
  position: absolute;
  margin-left: -70px;
}

.mainmenu .submenu li a {
  font-size: 14px;
  color: blue;
}

.mainmenu .subsubmenu li {
  min-height: 0;
  padding: 0;
}

.mainmenu .subsubmenu li a {
  color: black;
  font-size: 10px;
}

.mainact {
  padding: 30px 40px;
  width: 880px;
  position: relative;
  text-align: center;
}

.additionalnav {
  position: absolute;
  right: -209px;
  width: 200px;
  top: 0;
  text-align: left;
  padding: 30px 0 0 0;
  height: 220px;
}

.popup .personal-data input:focus {  
    -webkit-box-shadow: 0px 0px 5px #007eff;  
    -moz-box-shadow: 0px 0px 5px #007eff;  
    box-shadow: 0px 0px 5px #007eff;  
} 

.index .col-1, .index .col-2 {
  float: left;
}

.index .col-1 {
  padding: 10px 0 0 40px;
  width: 575px;
  overflow: hidden;
}

.index .col-2 {
  background: #fcfcfc;
  border: 1px dashed #dddce1;
  padding: 22px 22px 0px 22px;
  border-bottom-width: 0px;
  width: 259px;
  position: relative;
  overflow: show;
}

.index .col-2 .news {
  min-height: 560px;
}

.index .col-2 .about {
  border-right: 1px solid #edeef2;
  width: 904px;
  margin-left: -637px;
  margin-top: 20px;
  position: relative;
  z-index: 100;
}

.index .col-3 {
  margin-left: 960px;
  width: 270px;
  padding-top: 20px;
}

#footer {
  height: 53px;
  background: #38505c;
  padding: 25px 25px 60px 25px;
  color: #fff;
  position: relative;
}

#footer .bmenu {
  position: relative;
  float: right;
  top: -15px;
  color: #d2d2dc;
}

#footer .bmenu a {
  color: #fff;
}

#footer .copy {
  background: url(<%= image_path 'store/logo2.png' %>) no-repeat left;
  padding-left: 71px;
}

.bpanel {
  bottom: 0;
  position: fixed;
  background: url(<%= image_path 'store/bpanel.png' %>) repeat-x top;
  padding-top: 18px;
  height: 30px;
  z-index: 1000;
  width: 100%;
}

