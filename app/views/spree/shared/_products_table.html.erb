<div class="listing-controls">
  <span class="lc"></span>

  <div class="view-mode">
    Отображение:
    <select name="view-mode">
      <option value="list" selected="true">списком</option>
      <option value="grid">сеткой</option>
    </select>
  </div>

  <div>
    <span>Сортировка:</span>
    <%= order_link 'по наименованию', :name, :default => true %>
    <%= order_link 'по цене', :price %>
    <%= order_link 'по рейтингу', :rating %>
  </div>

  <span class="rc"></span>
</div>

<ol id="products" class="product-list">
  <%= render :partial => 'spree/shared/product', :collection => products %>
</ol>
<div id="pageless-loader" style="display: none; text-align: center; width: 100%;">
  <div class="msg" style="color:#e9e9e9;font-size:2em;">Загрузка товаров</div>
</div>

<script>
  $('#products').pageless({
    totalPages: <%= products.num_pages %>,
    loader: $('#pageless-loader')
  })
</script>
