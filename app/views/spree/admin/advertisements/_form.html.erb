<%= f.field_container :title do %>
  <%= f.label :title, t(:advertisement_title) %> <span class="required">*</span><br />
  <%= f.text_field :title %>
  <%= f.error_message_on :title %>
<% end %>

<%= f.field_container :link do %>
  <%= f.label :link, t(:advertisement_link) %><br />
  <%= f.text_field :link %>
  <%= f.error_message_on :link %>
<% end %>

<%= f.field_container :vertical_image do %>
  <%= f.label :vertical_image, t(:advertisement_vertical_image) %><br />
  <%= f.file_field :vertical_image %>
<% end %>


<%= f.field_container :horizontal_image do %>
  <%= f.label :horizontal_image, t(:advertisement_horizontal_image) %><br />
  <%= f.file_field :horizontal_image %>
<% end %>
