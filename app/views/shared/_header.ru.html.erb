<div id="header">
  <p class="logo">
    <a href="/">
      <%= image_tag 'store/logo.png' %>
      <span>г. Саратов</span>
    </a>
  </p>

  <div class="search">
    <input type="text" value="Найти легко! Поиск товара." /><a href="/">Найти</a>
  </div>

  <div class="contacts">
    <div class="phone"><span>т.</span> (8452) 25-49-90</div>
    <a href="/" class="callback">Услуга "Обратный звонок"</a>
